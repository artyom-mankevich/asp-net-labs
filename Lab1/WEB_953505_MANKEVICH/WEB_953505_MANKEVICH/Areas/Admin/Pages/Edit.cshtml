@page "{id:int}"
@model WEB_953505_MANKEVICH.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.CarId"/>
            <div class="form-group">
                <label asp-for="Car.ModelName" class="control-label"></label>
                <input asp-for="Car.ModelName" class="form-control"/>
                <span asp-validation-for="Car.ModelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ManufacturerName" class="control-label"></label>
                <input asp-for="Car.ManufacturerName" class="form-control"/>
                <span asp-validation-for="Car.ManufacturerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Image" class="control-label"></label>
                <input asp-for="Car.Image" class="form-control"/>
                <span asp-validation-for="Car.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CarGroupId" class="control-label"></label>
                <select asp-for="Car.CarGroupId" class="form-control" asp-items="ViewBag.CarGroupId"></select>
                <span asp-validation-for="Car.CarGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.js"></script>
    <script>
        bsCustomFileInput.init();
    </script>
}