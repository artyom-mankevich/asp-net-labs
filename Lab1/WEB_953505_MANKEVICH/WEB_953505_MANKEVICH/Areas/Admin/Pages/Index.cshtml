@page
@model WEB_953505_MANKEVICH.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<p class="mt-2">
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle"> Добавить</span>
    </a>
</p>
<table class="table">
    <thead>
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Car[0].ModelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car[0].ManufacturerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car[0].Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car[0].Group)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Car)
    {
        <tr>
            <td>
                <img src="~/images/@item.Image" alt="NoImage" width="50"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufacturerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.GroupName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CarId" class="btn btn-outline-info">
                    <span class="fas fa-edit"></span>
                </a>
                <a asp-page="./Delete" asp-route-id="@item.CarId" class="btn btn-outline-danger">
                    <span class="fas fa-trash-alt"></span>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>